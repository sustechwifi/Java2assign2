<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0"
      prefHeight="400" prefWidth="600"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.client.HomeController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <HBox alignment="CENTER">
        <TextField fx:id="ip" text="localhost"/>
        <Button fx:id="connect" text="confirm" onAction="#connect"/>
    </HBox>

    <HBox alignment="CENTER">
        <Button fx:id="start" text="start" onAction="#startGame"/>
    </HBox>


</VBox>



