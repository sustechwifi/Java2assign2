<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0"
      prefHeight="400" prefWidth="600"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.client.LoginController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <HBox>
        <Text text="user name  " />
        <TextField fx:id="username" prefWidth="200" prefHeight="30" text="input username"/>
    </HBox>

    <HBox>
        <Text text="password   "/>
        <TextField fx:id="password" prefWidth="200" prefHeight="30" text="input password"/>
    </HBox>

    <HBox alignment="CENTER">
        <Button fx:id="login" text="login" onAction="#login"/>

        <Button fx:id="register" text="register" onAction="#register"/>

        <Button fx:id="home" text="toHome" onAction="#toHome"/>
    </HBox>


</VBox>



